<h1>フォロー一覧</h1>

<% @users.each do |user| %>
  <hr>
  <p><span><strong>名前: </span><%= user.last_name %><%= user.first_name %></strong></p>
  <p><span><strong>email: </span><%= link_to user.email, user_path(user.id) %></strong></p>
    <% if current_user == @user %>
      <% if user.followed_by?(current_user) %>
        <p><%= link_to "フォロー外す", user_relationships_path(user), method: :delete, remote: true %></p>
      <% else %>
        <p><%= link_to "フォローする", user_relationships_path(user), method: :post, remote: true %></p>
      <% end %>
  <% end %>
<% end %>