<h2>ユーザー情報</h2>

<%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg"%>
 <table class="table table-hover">

                        <tbody>
                            <tr>
                                <td><strong>名前</strong></td>
                                <td><strong><%= user.last_name %><%= user.first_name %></strong></td>
                            </tr>
                            <tr>
                                <td><strong>紹介文</strong></td>
                                <td><strong><%= user.introduction %></strong></td>
                            </tr>
                            <tr>
                                <td><p>フォロー数<%= link_to user.followings.count, follows_user_relationships_path(user) %></p></td>
                            </tr>
                            <tr>
                                <td><p>フォロワー数<%= link_to user.followers.count, followers_user_relationships_path(user) %></p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <% if current_user != user %>
                                        <% if user.followed_by?(current_user) %>
                                            <p><%=link_to "フォロー外す", follows_user_relationships_path(user), method: :delete, class: "btn btn-primary" %></p>
                                        <% else %>
                                            <p><%=link_to "フォローする", followers_user_relationships_path(user), method: :post,class: "btn btn-success" %></p>
                                        <% end %>
                                    <% end %>
                                </td>
                            </tr>
                        </tbody>
                      </table>
<div class="row">
    <% if current_user == user %>
    <%= link_to '', user_edit_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{current_user.id}" %>
    <% end %>
</div>