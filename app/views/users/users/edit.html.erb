<div class="row">
  <div class="col-xs-offset-1 col-xs-9">
    　　<h2 class="page-title">登録情報編集</h2>
    　 <%= form_with(model:@user, local: true ,method: :patch, url: user_update_path(@user.id)) do |f| %>
       <%= hidden_field_tag :user_id, @user.id %>

    <% if @user.errors.any? %>
      <div>
        <h4><%= @user.errors.count %>件のエラーが発生しました。</h4>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="row">
      <div class="col-xs-10 edit-list">
        <span class="edit-list-title"><%= f.label :"写真" %><%= f.attachment_field :profile_image %></span>
        <span class="edit-list-title"><%= f.label :"名前" %></span>
        <span class="edit-list-item"><%= f.label :"(姓)" %></span>
        <span class="edit-list-item"><%= f.text_field :last_name %></span>
        <span class="edit-list-item"><%= f.label :"(名)" %></span>
        <span class="edit-list-item"><%= f.text_field :first_name %></span>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-10 edit-list">
        <span class="edit-list-title"><%= f.label :"フリガナ" %></span>
        <span class="edit-list-item"><%= f.label :"(セイ)"%></span>
        <span class="edit-list-item"><%= f.text_field :last_name_kana %></span>
        <span class="edit-list-item"><%= f.label :"(メイ)"%></span>
        <span class="edit-list-item"><%= f.text_field :first_name_kana %></span>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-10 edit-list">
        <span class="edit-list-title"><%= f.label :"メールアドレス"%></span>
        <span class="edit-list-blank"></span>
        <span class="edit-list-item"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></span>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-10 edit-list">
        <span class="edit-list-title"><%= f.label :"郵便番号(ハイフンなし)"%></span>
        <span class="edit-list-blank"></span>
        <span class="edit-list-item"><%= f.text_field :postcode%></span>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-10 edit-list">
        <span class="edit-list-title"><%= f.label :"住所"%></span>
        <span class="edit-list-blank"></span>
        <span class="edit-list-item"><%= f.text_field :address,size:60 %></span>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-10 edit-list">
        <span class="edit-list-title"><%= f.label :"電話番号(ハイフンなし)"%></span>
        <span class="edit-list-blank"></span>
        <span class="edit-list-item"><%= f.text_field :tel%></span>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-10 edit-list">
        <span class="edit-list-item"><%= f.label :"紹介文" %><%= f.text_area :introduction %></span>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-10 col-xs-offset-1 mypage-btn">
        <%= f.submit "編集内容を保存する", class: "btn btn-primary col-md-4" %>
        <%= link_to "退会する",  unsubscribe_user_path(@user), class: "btn btn-danger col-md-offset-2"%>
        <% end %>
      </div>
    </div>
  </div>
</div>