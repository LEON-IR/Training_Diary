<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<% if @menu.errors.any? %>
		      <div>
		        <h4><%= @menu.errors.count %>件のエラーが発生しました。</h4>
		        <ul>
		          <% @menu.errors.full_messages.each do |message| %>
		            <li><%= message %></li>
		          <% end %>
		        </ul>
		      </div>
		    <% end %>

		<%= render  'userinfo', user: current_user %>

		<%= render '/users/menus/new', menu: @menu %>

	</div>

	<div class="col-xs-9">
	    	<h2>ユーザー一覧</h2>
	    	<table class="table">
	    		<thead>
					<tr>
						<th>image</th>
						<th>名前</th>
						<th colspan="4"></th>
					</tr>
			    </thead>
			    <tbody>
				<% @users.each do |user| %>
					<tr>
						<td><%= attachment_image_tag  user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg"%>
						</td>
						<td>
							<%= user.last_name %><%= user.first_name %>
						</td>
                        <td><p>フォロー数:<%= link_to user.followings.count, follows_user_relationships_path(user) %></p>
                        </td>
                        <td><p>フォロワー数:<%= link_to user.followers.count, followers_user_relationships_path(user) %></p>
                        </td>
                        <td>
                        	<% if current_user != user %>
							    <% if user.followed_by?(current_user) %>
							        <p><%= link_to "フォロー外す", user_relationships_path(user), method: :delete %></p>
							    <% else %>
							        <p><%= link_to "フォローする", user_relationships_path(user), method: :post %></p>
							    <% end %>
							<% end %>
						</td>
                        <td>
							<%= link_to 'Show', user_path(user.id) %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	<nav>
      <%= paginate @users %>
    </nav>
	</div>
</div>

